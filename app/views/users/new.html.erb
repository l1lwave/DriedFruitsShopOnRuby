<h2 class="text-2xl font-bold text-yellow-400 mb-6 fade-in">Реєстрація</h2>
<%= form_with model: @user, class: "space-y-4 fade-in" do |f| %>
  <div>
    <%= f.label :email, class: "block text-gray-300" %>
    <%= f.email_field :email, class: "w-full bg-gray-700 text-gray-100 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-yellow-400" %>
  </div>
  <div>
    <%= f.label :name, class: "block text-gray-300" %>
    <%= f.text_field :name, class: "w-full bg-gray-700 text-gray-100 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-yellow-400" %>
  </div>
  <div>
    <%= f.label :password, class: "block text-gray-300" %>
    <%= f.password_field :password, class: "w-full bg-gray-700 text-gray-100 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-yellow-400" %>
  </div>
  <div>
    <%= f.label :password_confirmation, class: "block text-gray-300" %>
    <%= f.password_field :password_confirmation, class: "w-full bg-gray-700 text-gray-100 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-yellow-400" %>
  </div>
  <%= f.submit "Зареєструватись", class: "bg-yellow-400 text-gray-900 px-6 py-3 rounded-lg hover:bg-yellow-500 transition duration-300" %>
<% end %>