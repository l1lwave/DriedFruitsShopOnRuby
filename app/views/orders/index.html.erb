<h2 class="text-3xl font-bold text-yellow-400 mb-8 fade-in text-center">Мої Замовлення</h2>

<% if @orders.empty? %>
  <div class="text-center p-10 bg-gray-800 rounded-lg shadow-xl mt-6">
    <p class="text-gray-400 text-lg">У вас ще немає жодного оформленого замовлення.</p>
    <%= link_to "Перейти до каталогу", products_path, class: "mt-4 inline-block bg-yellow-600 text-gray-900 font-bold py-3 px-6 rounded-lg hover:bg-yellow-500 transition duration-300" %>
  </div>
<% else %>
  
  <div class="space-y-6 max-w-4xl mx-auto">
    <% @orders.each do |order| %>
      <div class="bg-gray-800 p-6 rounded-lg shadow-xl fade-in border-l-4 border-yellow-500">
        
        <%# Заголовок та Дата %>
        <div class="flex justify-between items-center border-b border-gray-700 pb-3 mb-4">
          <h3 class="text-xl font-bold text-gray-100">Замовлення №<%= order.id %></h3>
          <span class="text-gray-400 text-sm">від <%= order.created_at.strftime("%d.%m.%Y %H:%M") %></span>
        </div>

        <%# Список товарів %>
        <div class="space-y-3 mb-5">
          <p class="text-lg font-semibold text-gray-300">Склад замовлення:</p>
          
          <% order.line_items.each do |item| %>
            <div class="flex justify-between text-gray-400 border-b border-gray-700 border-dashed pb-1 last:border-b-0">
              <span class="truncate pr-4"><%= item.product.name %></span>
              <span class="whitespace-nowrap">
                <%= item.quantity %> шт. x <%= number_to_currency(item.price, unit: "₴") %>
              </span>
            </div>
          <% end %>
        </div>
        
        <%# Підсумок, Адреса та Статус %>
        <div class="border-t border-gray-700 pt-4 flex flex-col md:flex-row justify-between items-start md:items-center">
          
          <div>
            <p class="text-yellow-400 font-extrabold text-2xl mb-2">
              Всього: <%= number_to_currency(order.total_price, unit: "₴") %>
            </p>
            <p class="text-gray-500 text-sm">Адреса доставки: <%= order.address %></p>
          </div>
          
          <%# Відображення статусу з динамічним кольором %>
          <% status_class = case order.status
            when 'pending' then 'bg-yellow-700 text-yellow-100'
            when 'paid' then 'bg-green-700 text-green-100'
            when 'shipped' then 'bg-indigo-700 text-indigo-100'
            when 'cancelled' then 'bg-red-700 text-red-100'
            else 'bg-gray-700 text-gray-300'
          end %>
          
          <span class="mt-3 md:mt-0 px-4 py-1 text-sm font-semibold rounded-full <%= status_class %>">
            <%= order.status.titleize %>
          </span>
        </div>
        
      </div>
    <% end %>
  </div>

<% end %>