<h2 class="text-2xl font-bold text-yellow-400 mb-6 fade-in">Мої замовлення</h2>

<div class="overflow-x-auto">
  <table class="w-full bg-gray-800 rounded-lg shadow-lg">
    <thead>
      <tr class="bg-gray-700 text-gray-300">
        <th class="p-4 text-left">Товар</th>
        <th class="p-4 text-left">К-ть</th>
        <th class="p-4 text-left">Адреса</th>
        <th class="p-4 text-left">Статус</th>
        <th class="p-4 text-left">Дата</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |o| %>
        <tr class="border-t border-gray-700 hover:bg-gray-600 transition duration-300 fade-in">
          <td class="p-4"><%= o.product.name %></td>
          <td class="p-4"><%= o.product_count %></td>
          <td class="p-4"><%= o.address %></td>
          <td class="p-4"><%= o.status %></td>
          <td class="p-4"><%= o.created_at.strftime("%Y-%m-%d %H:%M") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>