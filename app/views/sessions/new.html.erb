<div class="max-w-md mx-auto py-10 fade-in">
  <h1 class="text-4xl font-extrabold text-yellow-400 mb-8 text-center">Вхід</h1>

  <%= form_with(url: login_path, class: "bg-gray-800 p-8 rounded-xl shadow-2xl space-y-5") do |f| %>

    <div>
      <%= f.label :email, "Електронна пошта", class: "block text-sm font-medium text-gray-400 mb-2" %>
      <%= f.email_field :email, 
                        class: "w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg focus:ring-yellow-500 focus:border-yellow-500 text-gray-100",
                        placeholder: "example@email.com",
                        value: params[:email] %>
    </div>

    <div>
      <%= f.label :password, "Пароль", class: "block text-sm font-medium text-gray-400 mb-2" %>
      <%= f.password_field :password, 
                           class: "w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg focus:ring-yellow-500 focus:border-yellow-500 text-gray-100",
                           placeholder: "Введіть пароль" %>
    </div>

    <div class="flex justify-end pt-2">
      <%= f.submit "Увійти", class: "bg-yellow-600 text-gray-900 font-bold py-3 px-6 rounded-lg shadow-lg hover:bg-yellow-500 transition duration-300 cursor-pointer" %>
    </div>

  <% end %>
  
  <div class="text-center mt-4 text-sm">
    <span class="text-gray-400">Не маєте акаунта?</span>
    <%= link_to "Зареєструватись", new_user_path, class: "text-yellow-400 hover:text-yellow-500 font-medium ml-1" %>
  </div>
</div>