<h2 class="text-2xl font-bold text-yellow-400 mb-6 fade-in">Вхід</h2>
<%= form_with url: login_path, class: "space-y-4 fade-in" do |f| %>
  <div>
    <%= label_tag :email, nil, class: "block text-gray-300" %>
    <%= text_field_tag :email, params[:email], class: "w-full bg-gray-700 text-gray-100 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-yellow-400" %>
  </div>
  <div>
    <%= label_tag :password, nil, class: "block text-gray-300" %>
    <%= password_field_tag :password, nil, class: "w-full bg-gray-700 text-gray-100 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-yellow-400" %>
  </div>
  <%= submit_tag "Увійти", class: "bg-yellow-400 text-gray-900 px-6 py-3 rounded-lg hover:bg-yellow-500 transition duration-300" %>
<% end %>