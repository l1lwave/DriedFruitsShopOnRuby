<h1 class="text-3xl font-bold text-yellow-400 mb-8 fade-in">Каталог сухофруктів</h1>

<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
  <% @products.each do |p| %>
    <div class="bg-gray-800 rounded-lg overflow-hidden shadow-lg hover-scale fade-in">
      <% if p.image_url.present? %>
        <img src="<%= p.image_url %>" class="w-full h-48 object-cover" alt="<%= p.name %>">
      <% end %>
      <div class="p-6 flex flex-col">
        <h5 class="text-xl font-semibold text-gray-100 mb-2"><%= link_to p.name, product_path(p), class: "hover:text-yellow-400 transition duration-300" %></h5>
        <p class="text-gray-400 mb-4 flex-grow"><%= truncate(p.description, length: 120) %></p>
        <p class="text-yellow-400 font-bold mb-4"><strong>Ціна:</strong> <%= number_to_currency(p.price, unit: "₴", format: "%n %u") %></p>
        <div class="flex space-x-2">
          <%= link_to "Купити", new_order_path(product_id: p.id), class: "bg-yellow-400 text-gray-900 px-4 py-2 rounded hover:bg-yellow-500 transition duration-300" %>
          <% if current_user&.admin? %>
            <%= link_to "Редагувати", edit_product_path(p), class: "bg-gray-600 text-gray-100 px-4 py-2 rounded hover:bg-gray-700 transition duration-300" %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>